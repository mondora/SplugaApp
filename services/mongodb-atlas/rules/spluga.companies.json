{
    "id": "5d3066acc3e6a2d8fd417210",
    "database": "spluga",
    "collection": "companies",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "team.id": "%%user.id",
                "team.role": "O"
            },
            "fields": {
                "team": {}
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "shared",
            "apply_when": {
                "team.id": "%%user.id",
                "team.role": "U"
            },
            "fields": {
                "team": {}
            },
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        },
        {
            "name": "acceptInvitation",
            "apply_when": {
                "team.email": "%%user.data.email"
            },
            "fields": {
                "team": {
                    "write": true
                }
            },
            "insert": true,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            },
            "name": {
                "bsonType": "string"
            },
            "logo": {
                "bsonType": "string"
            },
            "team": {
                "bsonType": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string"
                        },
                        "role": {
                            "type": "string"
                        },
                        "picture": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
